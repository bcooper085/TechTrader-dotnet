@{
    ViewData["Title"] = "Tech Trader ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Security.Claims
@model TechTrader.Models.Seller

@if (User.Identity.IsAuthenticated)
{
    <h4>Hello @Model.FirstName @Model.LastName. You are Logged In</h4>
    <h3>Your Tech Postings:</h3>
    <div class="post-list">
        <ul>
            @foreach (var Post in Model.Posts)
            {
                <li>(Post.Title) | @Html.ActionLink("Details", "Details", new { id = Post.PostId })</li>
            }
        </ul>
        <p class="btn btn-warning button">@Html.ActionLink("Add new Post", "Create", "Post")</p>
    </div>
}